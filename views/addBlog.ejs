<!DOCTYPE html>
<html lang="en">
<head>
  <%- include('./partials/head') %>
  <title>Add Blog</title>

  <!-- Google Fonts -->
  <link href="https://fonts.googleapis.com/css2?family=Nunito:wght@400;600&family=Oswald:wght@500;700&family=Raleway:wght@400;600&display=swap" rel="stylesheet">

  <style>
    body {
      background-color: #000;
      color: #fff;
      margin: 0;
      padding: 0;
      font-family: 'Nunito', sans-serif;
    }
    .form-control {
      background-color: #111;
      color: #fff;
      border: 1px solid #444;
      font-size: 0.9rem;
      padding: 8px 10px;
    }
    .form-control::placeholder {
      color: #aaa;
    }
    .form-label {
      color: #ccc;
      font-size: 0.9rem;
      margin-bottom: 4px;
    }
    .btn-custom {
      background-color: #fff;
      color: #000;
      border: none;
      padding: 8px 0;
      font-size: 0.95rem;
    }
    .btn-custom:hover {
      background-color: #ddd;
    }
    .container {
      max-width: 420px;
      margin: 40px auto;
      padding: 20px;
    }
    h2 {
      font-size: 1.4rem;
    }
    .mb-3 {
      margin-bottom: 14px;
    }
    @media (max-width: 480px) {
      .container {
        padding: 15px;
        margin-top: 20px;
      }
    }
  </style>
</head>
<body>
  <%- include('./partials/nav') %>

  <div class="container">
    <h2 class="text-center mb-3">Add Blog</h2>
    <form action="/blog" method="POST" enctype="multipart/form-data" >
      <div class="mb-3">
        <label for="coverImage" class="form-label">Cover Image</label>
        <input type="file" name="coverImage" class="form-control" required />
      </div>
      <div class="mb-3">
        <label for="title" class="form-label">Title</label>
        <input type="text" name="title" class="form-control" placeholder="Blog title" required />
      </div>
      <div class="mb-3">
        <label for="body" class="form-label">Body</label>
        <textarea name="body" class="form-control" rows="4" placeholder="Write here..." required></textarea>
      </div>
     
      <button type="submit" class="btn btn-custom w-100">Post</button>
    </form>
  </div>

  <%- include('./partials/script') %>
</body>
</html>
