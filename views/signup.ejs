<!DOCTYPE html>
<html lang="en">
<head>
  <%- include('./partials/head') %>
  <title>Sign Up</title>

  <!-- Google Fonts -->
  <link href="https://fonts.googleapis.com/css2?family=Nunito:wght@400;600&family=Oswald:wght@500;700&family=Raleway:wght@400;600&display=swap" rel="stylesheet">

  <style>
    body {
      background-color: #000;
      color: #fff;
    }
    .form-control {
      background-color: #111;
      color: #fff;
      border: 1px solid #444;
    }
    .form-control::placeholder {
      color: #aaa;
    }
    .form-label {
      color: #ddd;
    }
    .btn-custom {
      background-color: #fff;
      color: #000;
      border: none;
    }
    .btn-custom:hover {
      background-color: #ddd;
      color: #000;
    }
    .container {
      max-width: 500px;
      margin-top: 60px;
    }
  </style>
</head>
<body>
  <%- include('./partials/nav') %>

  <div class="container">
    <h2 class="text-center mb-4">Sign Up</h2>
    <form action="/signup" method="POST"  enctype="multipart/form-data">
      <div class="mb-3">
        <label for="ProfileIMage" class="form-label">Avtar</label>
        <input type="file" name="profileImageURL" class="form-control" placeholder="choose your avtar" required />
      </div>
      <div class="mb-3">
        <label for="fulName" class="form-label">Full Name</label>
        <input type="text" name="fulName" class="form-control" placeholder="Enter full name" required />
      </div>
      <div class="mb-3">
        <label for="email" class="form-label">Email address</label>
        <input type="email" name="email" class="form-control" placeholder="Enter email" required />
      </div>
      <div class="mb-3">
        <label for="password" class="form-label">Password</label>
        <input type="password" name="password" class="form-control" placeholder="Enter password" required />
      </div>
      <button type="submit" class="btn btn-custom w-100">Create Account</button>
    </form>

    <p class="text-center mt-3">Already have an account? <a href="/user/login" class="text-white">Login</a></p>
  </div>

  <%- include('./partials/script') %>
</body>
</html>
